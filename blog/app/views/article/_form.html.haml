.well.whiteBack
  = form_for @article, url: article_index_path, html: {class: 'form-horizontal'} do |f|
    - if @article.errors.any?
      #error_explanation
        %h4= "Please fix the following errors. - #{pluralize(@article.errors.count, "error")}"
        %ul
          - @article.errors.full_messages.each do |msg|
            %li= msg
    .row
      .col-md-6
        .form-group
          = f.label :title, class: 'control-label col-md-2'
          .col-md-10
            = f.text_field :title, class: 'form-control'
        .form-group
          = f.label :content, class: 'control-label col-md-2'
          .col-md-10
            = f.text_field :content, class: 'form-control'
        .form-group
          = f.label :author, class: 'control-label col-md-2'
          .col-md-10
            = f.text_field :author, class: 'form-control'

    .row
      .col-md-12
        .text-center
          = submit_tag "Save", class:'btn btn-primary'
          = link_to 'Cancel', article_index_path, class:'btn btn-danger'
